{
	"apiVersion": "v1",
	"kind": "List",
	"items": [{
		"apiVersion": "apiextensions.k8s.io/v1beta1",
		"kind": "CustomResourceDefinition",
		"metadata": {
			"name": "mongodbs.kubestack.com"
		},
		"spec": {
			"group": "kubestack.com",
			"names": {
				"kind": "MongoDB",
				"listKind": "MongoDBList",
				"plural": "mongodbs",
				"singular": "mongodb"
			},
			"scope": "Namespaced",
			"version": "v1"
		}
	}, {
		"apiVersion": "v1",
		"kind": "Namespace",
		"metadata": {
			"name": "kubestack"
		}
	}, {
		"apiVersion": "v1",
		"kind": "ServiceAccount",
		"metadata": {
			"name": "mongodb-operator",
			"namespace": "kubestack"
		}
	}, {
		"apiVersion": "rbac.authorization.k8s.io/v1beta1",
		"kind": "ClusterRole",
		"metadata": {
			"name": "mongodb-operator"
		},
		"rules": [{
			"apiGroups": ["kubestack.com"],
			"resources": ["mongodbs"],
			"verbs": ["list", "get", "watch"]
		}, {
			"apiGroups": ["apiextensions.k8s.io"],
			"resources": ["customresourcedefinitions"],
			"verbs": ["list", "get", "watch"]
		}, {
			"apiGroups": ["apps"],
			"resources": ["statefulsets"],
			"verbs": ["list", "create", "get", "patch", "delete"]
		}, {
			"apiGroups": [""],
			"resources": ["services"],
			"verbs": ["list", "create", "get", "patch", "delete"]
		}, {
			"apiGroups": [""],
			"resources": ["secrets"],
			"verbs": ["list", "create", "get", "delete"]
		}, {
			"apiGroups": [""],
			"resources": ["pods"],
			"verbs": ["list"]
		}, {
			"apiGroups": [""],
			"resources": ["pods/exec"],
			"verbs": ["get"]
		}]
	}, {
		"apiVersion": "rbac.authorization.k8s.io/v1beta1",
		"kind": "ClusterRoleBinding",
		"metadata": {
			"name": "mongodb-operator"
		},
		"roleRef": {
			"apiGroup": "rbac.authorization.k8s.io",
			"kind": "ClusterRole",
			"name": "mongodb-operator"
		},
		"subjects": [{
			"kind": "ServiceAccount",
			"name": "mongodb-operator",
			"namespace": "kubestack"
		}]
	}, {
		"apiVersion": "extensions/v1beta1",
		"kind": "Deployment",
		"metadata": {
			"labels": {
				"operator": "mongodb.operator.kubestack.com",
				"heritage": "kubestack.com"
			},
			"name": "mongodb-operator",
			"namespace": "kubestack"
		},
		"spec": {
			"replicas": 1,
			"selector": {
				"matchLabels": {
					"operator": "mongodb.operator.kubestack.com"
				}
			},
			"template": {
				"metadata": {
					"labels": {
						"operator": "mongodb.operator.kubestack.com",
						"heritage": "kubestack.com"
					}
				},
				"spec": {
					"containers": [{
						"image": "kubestack/mongodb:latest",
						"name": "mongodb-operator",
						"resources": {
							"limits": {
								"cpu": "200m",
								"memory": "100Mi"
							},
							"requests": {
								"cpu": "100m",
								"memory": "50Mi"
							}
						}
					}],
					"serviceAccountName": "mongodb-operator"
				}
			}
		}
	}, {
		"apiVersion": "kubestack.com/v1",
		"kind": "MongoDB",
		"metadata": {
			"name": "mongo",
			"namespace": "default"
		},
		"spec": {
			"mongodb": {
				"replicas": 3,
				"mongodb_limit_cpu": "500m",
				"mongodb_limit_memory": "256Mi"
			}
		}
	}]
}
